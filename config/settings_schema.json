// REVIEWS ////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
{
	"name": "Reviews",
	"settings": [
		{
			"type": "text",
			"id": "reviews_title",
			"label": "Title",
			"default": "Great"
		},
		{
			"type": "range",
			"id": "reviews_rating",
			"min": 1,
			"max": 5,
			"step": 1,
			"label": "Rating",
			"default": 4
		},
		{
			"type": "range",
			"id": "reviews_min",
			"min": 100,
			"max": 5000,
			"step": 100,
			"label": "Minimal reviews quantity",
			"default": 2000
		},
		{
			"type": "range",
			"id": "reviews_max",
			"min": 100,
			"max": 5000,
			"step": 100,
			"label": "Maximal reviews quantity",
			"default": 2500
		}
	]
}

