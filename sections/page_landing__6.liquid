	"name": "Part 6: accordions",
	"settings": [
		{
			"type": "header",
			"content": "Settings"
		},
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "text",
			"id": "btn_text",
			"label": "Button text"
		}
	],
	"blocks": [
		{
			"type": "item",
			"name": "Item",
			"settings": [
